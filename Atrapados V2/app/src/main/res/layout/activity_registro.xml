<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VentanaRegistro"
    android:background="@drawable/fondo"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:id="@+id/textView_titulo_ventanaRegistro"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_nombreUsuario_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_nombreUsuario_ventanaRegistro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre usuario"
        android:id="@+id/textView_usuario_ventanaRegistro"
        android:layout_below="@+id/textView_titulo_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nombreUsuario_ventanaRegistro"
        android:layout_below="@+id/textView_usuario_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_contrasena1_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_contrasena1_ventanaRegistro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/textView_email_ventanaRegistro"
        android:layout_below="@+id/editText_nombreUsuario_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_email_ventanaRegistro"
        android:layout_below="@+id/textView_email_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_nombreUsuario_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_nombreUsuario_ventanaRegistro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/textView_contrasena1_ventanaRegistro"
        android:layout_below="@+id/editText_email_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_contrasena1_ventanaRegistro"
        android:layout_below="@+id/textView_contrasena1_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_contrasena2_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_contrasena2_ventanaRegistro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Repite contraseña"
        android:id="@+id/textView_contrasena2_ventanaRegistro"
        android:layout_below="@+id/editText_contrasena1_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_contrasena2_ventanaRegistro"
        android:layout_below="@+id/textView_contrasena2_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_nombre_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_nombre_ventanaRegistro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/textView_nombre_ventanaRegistro"
        android:layout_below="@+id/editText_contrasena2_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nombre_ventanaRegistro"
        android:layout_below="@+id/textView_nombre_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_apellidos_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_apellidos_ventanaRegistro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/boton_registro_ventanaRegistro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_apellidos_ventanaRegistro"
        android:layout_alignEnd="@+id/editText_apellidos_ventanaRegistro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Apellidos"
        android:id="@+id/textView_apellidos_ventanaRegistro"
        android:layout_below="@+id/editText_nombre_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_apellidos_ventanaRegistro"
        android:layout_below="@+id/textView_apellidos_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_below="@+id/textView_titulo_ventanaRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText_apellidos_ventanaRegistro"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/boton_registro_ventanaRegistro"
        android:id="@+id/tableLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Puntuación"
            android:id="@+id/textView_puntuacion_ventanaRegistro"
            android:visibility="invisible"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editText_puntuacion_ventanaRegistro"
            android:layout_alignRight="@+id/textView_contrasena2_ventanaRegistro"
            android:layout_alignEnd="@+id/textView_contrasena2_ventanaRegistro"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_puntuacion_ventanaRegistro"
            android:visibility="invisible"
            android:text="0"
            android:layout_below="@+id/editText_apellidos_ventanaRegistro"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView_contrasena2_ventanaRegistro"
            android:textAlignment="textEnd"
            android:layout_toRightOf="@+id/textView_contrasena2_ventanaRegistro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tipo"
            android:id="@+id/textView_tipoUser_ventanaRegistro"
            android:visibility="invisible"
            android:layout_weight="0.80"
            android:gravity="center_vertical" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="18dp"
            android:id="@+id/spinner_tipo_ventanaRegistro"
            android:spinnerMode="dropdown"
            android:visibility="invisible"
            android:layout_below="@+id/editText_puntuacion_ventanaRegistro"
            android:layout_toRightOf="@+id/textView_contrasena2_ventanaRegistro"
            android:layout_toEndOf="@+id/textView_contrasena2_ventanaRegistro"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:gravity="center_vertical" />
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/button_eliminar_ventanaRegistro"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_guardar_ventanaRegistro"
        android:layout_toStartOf="@+id/button_guardar_ventanaRegistro"
        android:nestedScrollingEnabled="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/button_guardar_ventanaRegistro"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_contrasena2_ventanaRegistro"
        android:layout_toEndOf="@+id/textView_contrasena2_ventanaRegistro"
        android:visibility="invisible"
        android:clickable="false" />

</RelativeLayout>
