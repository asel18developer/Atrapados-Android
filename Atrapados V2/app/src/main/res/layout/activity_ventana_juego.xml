<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jesusgarcia.atrapados.VentanaJuego"
    android:background="@drawable/fondo">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_ventanaJuego"
        android:layout_below="@+id/textView_pregunta_ventanaJuego"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:visibility="invisible">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_respuesta1_ventanaJuego"
            android:checked="false"
            android:layout_weight="1.85" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_respuesta2_ventanaJuego"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_respuesta3_ventanaJuego"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_respuesta4_ventanaJuego"
            android:checked="false" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:gravity="center"
        android:id="@+id/textView_pregunta_ventanaJuego"
        android:scrollbars = "vertical"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView_puntuacion_ventanaJuego"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validar respuesta"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_validad_ventanaJuego"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:layout_alignRight="@+id/radioGroup_ventanaJuego"
        android:layout_alignEnd="@+id/radioGroup_ventanaJuego"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_puntuacion_ventanaJuego"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_pregunta_ventanaJuego"
        android:layout_alignEnd="@+id/textView_pregunta_ventanaJuego" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:id="@+id/button_comenzar_ventanaJuego"
        android:layout_alignTop="@+id/button_validad_ventanaJuego"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_validad_ventanaJuego"
        android:layout_alignEnd="@+id/button_validad_ventanaJuego" />
</RelativeLayout>
