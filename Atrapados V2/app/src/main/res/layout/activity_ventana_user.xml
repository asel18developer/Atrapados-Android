<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VentanaUsuario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Puntuaci贸n"
        android:id="@+id/textView_puntuacion_ventanaUser"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView_nombreUser_ventanaUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Puntos_ventanaUser"
        android:layout_alignTop="@+id/textView_puntuacion_ventanaUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario: "
        android:id="@+id/textView_nombreUser_ventanaUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:id="@+id/button_jugar_ventanaUser"
        android:layout_below="@+id/textView_puntuacion_ventanaUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugerir pregunta"
        android:id="@+id/button_sugerir_ventanaUser"
        android:layout_below="@+id/button_jugar_ventanaUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_jugar_ventanaUser"
        android:layout_alignEnd="@+id/button_jugar_ventanaUser" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button_sugerir_ventanaUser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesti贸n Usuarios"
        android:id="@+id/button_gestion_usuarios_ventanaUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_below="@+id/button_sugerir_ventanaUser"
        android:layout_alignRight="@+id/button_sugerir_ventanaUser"
        android:layout_alignEnd="@+id/button_sugerir_ventanaUser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesti贸n Partidas"
        android:id="@+id/button_gestion_partidas_ventanaUser"
        android:layout_below="@+id/button_gestion_usuarios_ventanaUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesti贸n Sugerencias"
        android:id="@+id/button_gestion_sugerencias_ventanaUser"
        android:layout_below="@+id/button_gestion_partidas_ventanaUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:visibility="invisible" />

</RelativeLayout>
