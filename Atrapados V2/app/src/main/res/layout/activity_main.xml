<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VentanaLoggin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre usuario"
        android:id="@+id/textView_nombre_usuario_ventanaPrincipal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_usuario_ventanaPrincipal"
        android:layout_below="@+id/textView_nombre_usuario_ventanaPrincipal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_contrasena_ventanaPrincipal"
        android:layout_alignEnd="@+id/editText_contrasena_ventanaPrincipal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/textView_contrasena_ventanaPrincipal"
        android:layout_below="@+id/editText_usuario_ventanaPrincipal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/textView_contrasena_ventanaPrincipal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText_contrasena_ventanaPrincipal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:id="@+id/button_inicio_sesion_ventanaPrincipal"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_registrase_ventanaPrincipal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrase"
        android:id="@+id/button_registrase_ventanaPrincipal"
        android:layout_alignTop="@+id/button_inicio_sesion_ventanaPrincipal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Olvido contraseña?"
        android:id="@+id/textView_olvido_contraseña_ventanaPrincipal"
        android:layout_below="@+id/button_inicio_sesion_ventanaPrincipal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/button_registrase_ventanaPrincipal"
        android:layout_alignEnd="@+id/button_registrase_ventanaPrincipal"
        android:clickable="true"
        android:contextClickable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_logo_ventanaPrincipal"
        android:background="@drawable/logo"
        android:layout_below="@+id/textView_olvido_contraseña_ventanaPrincipal"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
