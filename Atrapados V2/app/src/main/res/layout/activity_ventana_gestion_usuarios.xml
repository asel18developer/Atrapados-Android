<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jesusgarcia.atrapados.VentanaGestionUsuarios">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_Usuarios"
        android:dividerHeight="2dp"
        android:divider="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_info"
        android:layout_above="@+id/button_añadir_ventanaGestionUsuarios" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinche en el usuario para modificar o eliminar"
        android:id="@+id/textView_info"
        android:layout_alignRight="@+id/listView_Usuarios"
        android:layout_alignEnd="@+id/listView_Usuarios"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir usuario"
        android:id="@+id/button_añadir_ventanaGestionUsuarios"
        android:layout_alignRight="@+id/listView_Usuarios"
        android:layout_alignEnd="@+id/listView_Usuarios"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
