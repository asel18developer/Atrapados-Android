<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VentanaSugerencia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sugerencia"
        android:id="@+id/textView_sugerencia_ventanaSugerencia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Introduce la pregunta"
        android:id="@+id/textView_pregunta_ventanaSugerencia"
        android:layout_below="@+id/textView_sugerencia_ventanaSugerencia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Pregunta_ventanaSugerencia"
        android:layout_below="@+id/textView_pregunta_ventanaSugerencia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Introduce la respuesta correcta"
        android:id="@+id/textView_respuesta_ventanaSugerencia"
        android:layout_below="@+id/editText_Pregunta_ventanaSugerencia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_respuestaCorrecta_ventanaSugerencia"
        android:layout_below="@+id/textView_respuesta_ventanaSugerencia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_Pregunta_ventanaSugerencia"
        android:layout_alignEnd="@+id/editText_Pregunta_ventanaSugerencia" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Sugerencia"
        android:id="@+id/button_enviar_ventanaSugerencia"
        android:layout_below="@+id/editText_respuestaCorrecta_ventanaSugerencia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:layout_alignRight="@+id/editText_respuestaCorrecta_ventanaSugerencia"
        android:layout_alignEnd="@+id/editText_respuestaCorrecta_ventanaSugerencia"
         />




</RelativeLayout>
